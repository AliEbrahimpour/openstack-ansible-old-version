

auto lo
iface lo inet loopback

auto enp9s0
iface enp9s0 inet manual
#	mtu 9000


auto enp9s0.4
iface enp9s0.4 inet manual
        vlan-raw-device enp9s0

auto enp9s0.5
iface enp9s0.5 inet manual
        vlan-raw-device enp9s0

auto enp9s0.6
iface enp9s0.6 inet manual
        vlan-raw-device enp9s0


auto br-mgmt
iface br-mgmt inet static
    bridge_stp off
    bridge_waitport 0
    bridge_fd 0
    bridge_ports enp9s0.4
    address 172.16.104.41/22
    gateway 172.16.107.254

# Storage bridge
auto br-storage
iface br-storage inet static
    bridge_stp off
    bridge_waitport 0
    bridge_fd 0
    bridge_ports enp9s0.5
    address 172.16.109.41/24


# OpenStack Networking VXLAN (tunnel/overlay) bridge
auto br-vxlan
iface br-vxlan inet static
    bridge_stp off
    bridge_waitport 0
    bridge_fd 0
    bridge_ports enp9s0.6
    address 172.16.110.41/24



# OpenStack Networking VLAN bridge
auto br-vlan
iface br-vlan inet manual
    bridge_stp off
    bridge_waitport 0
    bridge_fd 0
    pre-up ip link add br-vlan-veth type veth peer name eth12 || true
    pre-up ip link set br-vlan-veth up
    pre-up ip link set eth12 up
    post-down ip link del br-vlan-veth || true
    bridge_ports enp9s0 br-vlan-veth
